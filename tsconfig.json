{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "sourceRoot": "src",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "module": "ESNext",
    // Ensures compatibility with Node resolution
    "moduleResolution": "node",
    "target": "ESNext",
    // Target at least ESNext for ESM support
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": false,
    "lib": [
      "es2019"
    ]
  },
  "exclude": [
    "test"
  ]
}